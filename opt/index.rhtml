<% require 'net/http' %>
<% require 'open-uri' %>
<% require 'json' %>
<% line = File.open('ngrok.yml', &:readline) %>
<% addr = line.match(/web_addr: ([^\n]+)/)[1] %>
<% if servlet_request.query.has_key?("rcon") %>
  <% JSON.load(open("http://" + addr + "/api/tunnels/rcon")) do |datajson| %>
    <center>
      <% url = datajson['public_url'] %>
      <%= url.match(/tcp:\/\/(.+:[0-9]+)/)[1] %><br />
    </center>
  <% end %>
<% else %>
  <% JSON.load(open("http://" + addr + "/api/tunnels/command_line")) do |datajson| %>
    <center>
      <% url = datajson['public_url'] %>
      Server available<br />
      <%= url.match(/tcp:\/\/(.+:[0-9]+)/)[1] %><br />
    </center>
  <% end %>
<% end %>
